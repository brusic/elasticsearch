{
  "get_script":{
    "documentation":{
      "url":"https://www.elastic.co/guide/en/elasticsearch/reference/master/modules-scripting.html",
      "description":"Returns a script."
    },
    "stability":"stable",
    "url":{
      "paths":[
        {
          "path":"/_script",
          "methods":[
            "GET"
          ]
        },
        {
          "path":"/_script/{id}",
          "methods":[
            "GET"
          ],
          "parts":{
            "id":{
              "type":"string",
              "description":"Script ID"
            }
          }
        }
      ]
    },
    "params":{
      "master_timeout":{
        "type":"time",
        "description":"Specify timeout for connection to master"
      },
      "new_format": {
        "type" : "boolean",
        "description" : "Use the new format"
      }
    }
  }
}
